@model CreateAccountVM

@{
    ViewData["Title"] = "Create Account";
}

<h1 class="display-4">Create an Account</h1>

<div class="form-container">
    <div class="form-content">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <form method="post" asp-action="CreateAccount">



            <div class="form-group row">
                <label for="firstName">
                    First Name: &nbsp;&nbsp;
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </label>
                <input id="firstName" asp-for="FirstName" class="form-control" placeholder="Your first name" />
            </div>


            <div class="form-group row">
                <label for="lastName">
                    Last Name: &nbsp;&nbsp;
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </label>
                <input id="lastName" asp-for="LastName" class="form-control" placeholder="Your last name" />
            </div>


            <div class="form-group row">
                <label for="username">
                    Username: &nbsp;&nbsp;
                    <span asp-validation-for="Username" class="text-danger"></span>
                </label>
                <input id="username" asp-for="Username" class="form-control" placeholder="Your username" />
            </div>


            <div class="form-group row">
                <label for="password">
                    Password: &nbsp;&nbsp;
                    <span asp-validation-for="Password" class="text-danger"></span>
                </label>
                <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Your password" />
            </div>


            <div class="form-group row">
                <label for="confirmPassword">
                    Confirm Password: &nbsp;&nbsp;
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </label>
                <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
            </div>


            <br />
            <button type="submit" class="btn btn-light">Create Account</button>
            <br /><br />

            <div class="row">
                Already registered? &nbsp;<a asp-action="Login">Click here to log in.</a>
            </div>
        </form>


    </div>

</div>
