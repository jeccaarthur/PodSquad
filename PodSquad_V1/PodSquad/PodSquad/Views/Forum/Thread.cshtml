@model Post

@{
    ViewData["Title"] = "View Thread";
}


<div class="trail">
    <a asp-action="Index">
        <span class="trail-icon glyphicon glyphicon-menu-left"></span>
        <span class="trail-name">Back to Forum</span>
    </a>
</div>


<div class="thread-container">
    <div class="thread-content">


        @* post (parent) *@
        <div class="post-container">
            <div class="post-content">

                <div class="thread-text">
                    <h4 class="p-1">@Model.Title</h4>
                    <div class="p-1">@Model.Body</div>
                </div>

                <div class="thread-info">
                    <div class="p-1">Posted by @Model.Poster.UserName on @Model.Date.ToShortDateString()</div>
                </div>
                <div class="reply-button">
                    <a class="btn btn-light" asp-action="Reply" asp-route-postID="@Model.PostID">Reply</a>
                </div>

            </div>
        </div>



        <div class="thread-replies">

            @foreach (Reply r in Model.Replies)
            {

                @* individual reply *@
                <div class="reply-container">
                    <div class="reply-content">

                        <div class="p-1 reply-header">@r.Responder responded:</div>
                        <div class="p-3">@r.ReplyText</div>
                        <div class="p-1 reply-info">@r.Date.ToShortDateString()</div>

                    </div>
                </div>

            }

        </div>

    </div>
</div>
